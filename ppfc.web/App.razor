@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using System.Net.Http.Headers
@using ppfc.web.Helpers
@inject ProtectedLocalStorage SessionStorage
@inject UserContext UserContext;
@inject HttpClient Http

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            @if (routeData.PageType == typeof(ppfc.web.Pages.Login))
            {
                <RouteView RouteData="@routeData" DefaultLayout="@typeof(BlankLayout)" />
            }
            else
            {
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <!-- ✅ This shows during authorization -->
                    <Authorizing>
                        <LayoutView Layout="@typeof(BlankLayout)">
                            <div class="d-flex flex-column align-items-center justify-content-center vh-100 text-muted">
                                <div class="spinner-border text-primary mb-3" role="status"></div>
                                <p>Authorizing...</p>
                            </div>
                        </LayoutView>
                    </Authorizing>

                    <NotAuthorized>
                        <LayoutView Layout="@typeof(BlankLayout)">
                            <RedirectToLogin />
                        </LayoutView>
                    </NotAuthorized>
                </AuthorizeRouteView>
            }

            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>

        <NotFound>
            <LayoutView Layout="@typeof(BlankLayout)">
                <p>Sorry, page not found.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>


@code {
    protected override async Task OnInitializedAsync()
    {
        // var company = await SessionStorage.GetAsync<int>("CompanyId");
        // var user = await SessionStorage.GetAsync<string>("UserName");
        // var userId = await SessionStorage.GetAsync<int>("UserId");

        // if (company.Success)
        //     UserContext.SetUser(company.Value, userId.Value, user.Value);

        var tokenResult = await SessionStorage.GetAsync<string>("JwtToken");
        if (tokenResult.Success && !string.IsNullOrEmpty(tokenResult.Value))
        {
            Http.DefaultRequestHeaders.Authorization =
                new AuthenticationHeaderValue("Bearer", tokenResult.Value);
        }
    }
}
