@page "/master/revenuehead"
@using Radzen
@using Radzen.Blazor
@using ppfc.DTO
@attribute [Authorize]
@inject HttpClient Http
@inject NotificationService NotificationService
@inject DialogService DialogService

<RadzenNotification />

<PageTitle>Revenue Head</PageTitle>

@if (IsLoading)
{
    <div class="d-flex flex-column align-items-center justify-content-center vh-100 text-muted">
        <div class="spinner-border text-primary mb-3" role="status"></div>
        <p>Loading revenue heads...</p>
    </div>
}
else
{
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:10px;">
        <div><h3 class="mb-0">Revenue Head</h3></div>
        <div>
            <RadzenButton Icon="add_circle" Text="Add New" Click="@AddNew" ButtonStyle="ButtonStyle.Secondary" />
        </div>
    </div>

    <RadzenDataGrid @ref="grid" Data="@revenueHeads" TItem="RevenueHeadDto"
                    EditMode="DataGridEditMode.Single"
                    AllowPaging="true" PageSize="10"
                    AllowSorting="true"
                    AllowFiltering="true"
                    FilterMode="FilterMode.Simple"
                    FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                    Style="min-width:640px;"
                    PagerHorizontalAlign="HorizontalAlign.Right">
        <Columns>
            <!-- Revenue Head -->
            <RadzenDataGridColumn TItem="RevenueHeadDto" Property="RevenueHeadName" Title="Revenue Head" FilterPlaceholder="Search Revenue Head">
                <Template Context="item">
                    @item.RevenueHeadName
                </Template>
                <EditTemplate Context="item">
                    <RadzenTextBox @bind-Value="item.RevenueHeadName" Style="width:100%;" />
                </EditTemplate>
            </RadzenDataGridColumn>

            <!-- Branch (display text; edit as dropdown) -->
            <RadzenDataGridColumn TItem="RevenueHeadDto" Property="BranchName" Title="Branch" FilterPlaceholder="Search Branch">
                <EditTemplate Context="item">
                    <RadzenDropDown Data="@branches"
                                    TextProperty="BranchName"
                                    ValueProperty="BranchId"
                                    @bind-Value="item.BranchId"
                                    AllowFiltering="true"
                                    Style="width:100%"
                                    Placeholder="Select Branch"
                                    AllowClear="true"
                                    FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" />
                </EditTemplate>
            </RadzenDataGridColumn>

            <!-- Actions -->
            <RadzenDataGridColumn TItem="RevenueHeadDto" Title="Actions" Width="120px" TextAlign="TextAlign.Center">
                <Template Context="item">
                    @if (grid != null && grid.IsRowInEditMode(item))
                    {
                        <RadzenButton Icon="save" Size="ButtonSize.Small" Click="@(args => SaveRevenueHead(item))" Style="margin-right:6px;" />
                        <RadzenButton Icon="cancel" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Small" Click="@(args => CancelEdit(item))" />
                    }
                    else
                    {
                        <RadzenButton Icon="edit" Size="ButtonSize.Small" Click="@(args => EditRevenueHead(item))" Style="margin-right:6px;" />
                        <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Small" Click="@(args => DeleteRevenueHead(item))" />
                    }
                </Template>
            </RadzenDataGridColumn>
        </Columns>
    </RadzenDataGrid>
}