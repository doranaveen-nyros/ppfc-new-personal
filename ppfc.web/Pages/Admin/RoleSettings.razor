    @if (categorizedRoles.Count > 0)
    {
        <ul class="nav nav-tabs" id="roleTabs" role="tablist">
            @foreach (var module in categorizedRoles.Keys)
            {
                var moduleId = module.Replace(" ", "").ToLower();
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(module == activeModule ? "active" : "")"
                            id="@($"{moduleId}-tab")"
                            @onclick="() => SelectTab(module)"
                            type="button"
                            role="tab">
                        @module
                    </button>
                </li>
            }
        </ul>

        <div class="tab-content mt-3" id="roleTabsContent">
            @foreach (var kvp in categorizedRoles)
            {
                var module = kvp.Key;
                var screens = kvp.Value;
                var moduleId = module.Replace(" ", "").ToLower();
                var color = colorTriggers.FirstOrDefault(c => c.Value.module == module).Value.color ?? "black";

                <div class="tab-pane fade @(module == activeModule ? "show active" : "")"
                     id="@moduleId"
                     role="tabpanel">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr style="color:@color;">
                                <th style="width:38%">Screen Name</th>
                                <th style="width:15%">
                                    <div class="d-flex align-items-center">
                                        <input type="checkbox"
                                               @onchange="e => ToggleAllAdd(e, module)"
                                               checked="@screens.All(r => r.AdditionPrivileges || ScreenPrivileges.GetRestrictions(r.ScreenName).DisableAdd)" /> <label class="ms-2">Add ALL</label>
                                    </div>                                    
                                </th>
                                <th style="width:15%">
                                    <div class="d-flex align-items-center">
                                        <input type="checkbox"
                                               @onchange="e => ToggleAllEdit(e, module)"
                                               checked="@screens.All(r => r.EditPrivileges || ScreenPrivileges.GetRestrictions(r.ScreenName).DisableEdit)" /> <label class="ms-2">Edit ALL</label>
                                    </div>
                                </th>
                                <th style="width:17%">
                                    <div class="d-flex align-items-center">
                                        <input type="checkbox"
                                               @onchange="e => ToggleAllDelete(e, module)"
                                               checked="@screens.All(r => r.DeletePrivileges || ScreenPrivileges.GetRestrictions(r.ScreenName).DisableDelete)" /> <label class="ms-2">Delete ALL</label>
                                    </div>
                                </th>
                                <th style="width:15%">
                                    <div class="d-flex align-items-center">
                                        <input type="checkbox"
                                               @onchange="e => ToggleAllView(e, module)"
                                               checked="@screens.All(r => r.ViewPrivileges || ScreenPrivileges.GetRestrictions(r.ScreenName).DisableView)" /> <label class="ms-2">View ALL</label>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in screens)
                            {
                                var restriction = ScreenPrivileges.GetRestrictions(r.ScreenName);

                                <tr style="color:@color;" title="@module">
                                    <td>@r.ScreenName</td>
                                    <td><input type="checkbox" @bind="r.AdditionPrivileges" disabled="@restriction.DisableAdd" /></td>
                                    <td><input type="checkbox" @bind="r.EditPrivileges" disabled="@restriction.DisableEdit" /></td>
                                    <td><input type="checkbox" @bind="r.DeletePrivileges" disabled="@restriction.DisableDelete" /></td>
                                    <td><input type="checkbox" @bind="r.ViewPrivileges" disabled="@restriction.DisableView" /></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    }


    <div class="mt-3 d-flex gap-2">
        @* <button class="btn btn-primary" @onclick="SubmitRoleSettings">Submit</button> *@
        <button type="button"
                class="btn btn-primary"
                @onclick="SubmitRoleSettings"
                disabled="@IsSubmitting">
            @if (IsSubmitting)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                <span>Submitting...</span>
            }
            else
            {
                <span>Submit</span>
            }
        </button>
        <button class="btn btn-secondary" @onclick="ResetGrid">Reset</button>
    </div>
}