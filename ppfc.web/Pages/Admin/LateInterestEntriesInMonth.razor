@page "/admin/lateinterestentriesinmonth"
@using System.ComponentModel.DataAnnotations
@using Radzen
@using Radzen.Blazor
@using ppfc.DTO
@attribute [Authorize]
@inject HttpClient Http
@inject NotificationService NotificationService
@inject DialogService DialogService

<RadzenNotification />

<PageTitle>Late Interest Entries</PageTitle>

<h3 class="text-start mb-4">Late Interest Entries in Month</h3>

@if (IsLoading)
{
    <div class="d-flex flex-column align-items-center justify-content-center vh-100 text-muted">
        <div class="spinner-border text-primary mb-3" role="status"></div>
        <p>Loading Late Interest Entries In Month...</p>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <label class="col-form-label">Entries in Month</label>
                        </div>
                        <div class="col">
                            <InputNumber @bind-Value="lateInterestEntriesInMonth"
                                         class="form-control form-control-sm" aria-label="Entries in Month" />
                        </div>
                        <div class="col-auto">
                            <button type="button"
                                    class="btn btn-primary"
                                    @onclick="UpdateLateInterest"
                                    disabled="@IsUpdating">
                                @if (IsUpdating)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Updating...</span>
                                }
                                else
                                {
                                    <span>Update</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* <div class="col-md-3">
        <label>
            Entries in Month
        </label>
        <input @bind-value="lateInterestEntriesInMonth" />
        <button type="button"
                class="btn btn-primary"
